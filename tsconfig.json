{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "baseUrl": "./src",
    "paths": {
      "~*": ["./*"]
    },
    "jsx": "react",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
